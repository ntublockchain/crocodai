contract Bridge is Context, IBridge {
    using SafeMath for uint256;
    using Address for address;

    mapping (address => uint256) private _balances;

    mapping (address => mapping (address => uint256)) private _allowances;    
    
    struct Request { 
        bool incoming;
        uint256 amount;
        address sender;
        string target_chain; // change this if appropriate
        address target_account;  //change this if appropriate
    }

    uint256 private _totalSupply;
    Request[] requests;

    string private _name;
    string private _symbol;
    uint8 private _decimals;
    GemLike private _gem;

    address private _owner;

    constructor (string memory __name, string memory __symbol, address __gem) {
        _name = __name;
        _symbol = __symbol;
        _owner = msg.sender;
        _gem = GemLike(__gem);
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function deposit(uint256 amount, string calldata target_chain, address target_account) public virtual override returns (bool) {
        _deposit(_msgSender(), amount, target_chain, target_account);
        return true;
    }

    function _deposit(address sender, uint256 amount, string calldata target_chain, address target_account) internal virtual {
        // require(sender != address(0), "Bridge: transfer from the zero address");
        require(_gem.transferFrom(msg.sender, address(this), amount), "GemJoin/failed-transfer");
        requests.push(Request(true, amount, address(this), target_chain, target_account));
        // emit Deposit(sender, amount);
    }

    function withdraw(address receiver, uint256 amount) public virtual override returns (bool) {
        require(msg.sender == _owner, "Bridge: only owner can withdraw");
        _withdraw(receiver, amount);
        return true;
    }

    function _withdraw(address receiver, uint256 amount) internal virtual {
        // require(receiver != address(0), "Bridge: transfer from the zero address");
        require(_gem.transfer(receiver, amount), "GemJoin/failed-transfer");
        // emit Withdraw(receiver, amount);
    }
}